@page "/"

<PageTitle>AgentSystem | Home</PageTitle>

<div id="home-page">
    <HomeSvg />

    <h1>Welcome to AgentSystem</h1>

    <p>A comprehensive framework for autonomous agent development</p>
    
    <div class="agent-image">
        <img src="images/Types-of-AI-Agents.webp" alt="Types of AI Agents" />
    </div>
</div>

<style>
    #home-page {
        margin-left: auto;
        margin-right: auto;
        max-width: 800px;
        text-align: center;
        font-size: var(--kendo-font-size-xl);
    }

    .agent-image {
        margin-top: 2rem;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .agent-image img {
        max-width: 100%;
        height: auto;
    }

    @@media (min-height: calc(56px + 50px + 600px)) {
        /* header + footer + home page container*/
        #home-page {
            margin-top: calc(50vh - 28px - 25px - 300px);
        }
    }
</style>

